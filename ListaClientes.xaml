<Window x:Class="Proyecto_DetmerMedina_.ListaClientes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista de Clientes" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">
    <Grid>
        <!-- Barra superior -->
        <Border Background="#4A90E2" Height="50" VerticalAlignment="Top">
            <Grid>
                <!-- Título de la sección -->
                <TextBlock Text="Lista de Clientes" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center" 
                           Margin="10,0" />

                <!-- Botón para regresar a la ventana anterior -->
                <Button Content="Volver" 
                        Background="Transparent" 
                        Foreground="White" 
                        BorderThickness="0" 
                        FontSize="16" 
                        FontWeight="Bold" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        Margin="0,0,10,0" 
                        Click="BtnVolver_Click" />

                <Button Content="Inicio" 
                        Background="Transparent" 
                        Foreground="White" 
                        BorderThickness="0" 
                        FontSize="16" 
                        FontWeight="Bold" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        Margin="0,0,840,0" 
                        Click="BtnVolverPrin" />
            </Grid>
        </Border>

        <!-- Contenido principal -->
        <Grid Margin="0,50,0,50">
            <!-- Lista de clientes envuelta en un ScrollViewer -->
            <Border Background="#E8F0FE" CornerRadius="10" Margin="10">
                <StackPanel Margin="10">
                    <TextBlock Text="Clientes" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#4A90E2" 
                               Margin="0,0,0,10" />

                    <!-- ScrollViewer con ListView dentro -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <ListView Name="LstClientesLista" 
                                  Background="White" 
                                  BorderBrush="#C4C4C4" 
                                  BorderThickness="1" 
                                  Height="400">
                            <!-- Establecer un tamaño fijo -->
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Nombre" DisplayMemberBinding="{Binding Nombre}" />
                                    <GridViewColumn Header="DNI" DisplayMemberBinding="{Binding DNI}" />
                                    <GridViewColumn Header="Estado" DisplayMemberBinding="{Binding Estado}" />
                                    <GridViewColumn Header="Origen" DisplayMemberBinding="{Binding Origen}" />
                                    <GridViewColumn Header="Destino" DisplayMemberBinding="{Binding Destino}" />
                                    <GridViewColumn Header="Tipo de Viaje" DisplayMemberBinding="{Binding TipoDeViaje}" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Barra inferior -->
        <Border Background="#4A90E2" Height="50" VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Travel Explorago - Gestión de Viajes" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           Foreground="White" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
