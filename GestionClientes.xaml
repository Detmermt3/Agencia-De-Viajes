<Window x:Class="Proyecto_DetmerMedina_.GestionClientes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Clientes" Height="600" Width="914"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">
    <Grid>
        <!-- Barra superior -->
        <Border Background="#4A90E2" Height="50" VerticalAlignment="Top">
            <Grid>
                <!-- Título de la sección -->
                <TextBlock Text="Gestión de Clientes" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left" 
                           Margin="10,0" />

                <!-- Botón para regresar al menú principal -->
                <Button Content="Volver" 
                        Background="Transparent" 
                        Foreground="White" 
                        BorderThickness="0" 
                        FontSize="16" 
                        FontWeight="Bold" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        Margin="0,0,10,0" 
                        Click="BtnVolver_Click" />
            </Grid>
        </Border>

        <!-- Contenido principal -->
        <Grid Margin="0,50,0,50">
            <!-- Panel izquierdo: Lista de clientes -->
            <Border Background="#E8F0FE" CornerRadius="10" Margin="10">
                <StackPanel Margin="10">
                    <TextBlock Text="Clientes" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#4A90E2" 
                               Margin="0,0,0,10" />
                    <ListView Name="LstClientes">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Nombre" DisplayMemberBinding="{Binding Nombre}" />
                                <GridViewColumn Header="DNI" DisplayMemberBinding="{Binding DNI}" />
                                <GridViewColumn Header="Estado" DisplayMemberBinding="{Binding Estado}" />
                                <GridViewColumn Header="Origen" DisplayMemberBinding="{Binding Origen}" />
                                <GridViewColumn Header="Destino" DisplayMemberBinding="{Binding Destino}" />
                                <GridViewColumn Header="Tipo de Viaje" DisplayMemberBinding="{Binding TipoDeViaje}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- Panel derecho: Detalles del cliente seleccionado -->
            <Border Background="#FFFFFF" CornerRadius="10" Margin="10" Grid.Column="1">
                <StackPanel Margin="10">
                    <TextBlock Text="Detalles del Cliente" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#4A90E2" 
                               Margin="0,0,0,10" />

                    <TextBlock Text="Nombre:" FontWeight="Bold" />
                    <TextBox Name="TxtNombre" Background="#F5F5F5" Margin="0,5,0,10" />

                    <TextBlock Text="DNI:" FontWeight="Bold" />
                    <TextBox Name="TxtDNI" Background="#F5F5F5" Margin="0,5,0,10" />

                    <TextBlock Text="Estado del Viaje:" FontWeight="Bold" />
                    <ComboBox Name="CmbEstado" Margin="0,5,0,10">
                        <ComboBoxItem Content="Pendiente" />
                        <ComboBoxItem Content="Cerrado" />
                        <ComboBoxItem Content="Cancelado" />
                    </ComboBox>

                    <TextBlock Text="Origen:" FontWeight="Bold" />
                    <TextBox Name="TxtOrigen" Background="#F5F5F5" Margin="0,5,0,10" />

                    <TextBlock Text="Destino:" FontWeight="Bold" />
                    <TextBox Name="TxtDestino" Background="#F5F5F5" Margin="0,5,0,10" />

                    <TextBlock Text="Tipo de Viaje:" FontWeight="Bold" />
                    <ComboBox Name="CmbTipoDeViaje" Margin="0,5,0,10">
                        <ComboBoxItem Content="Turismo" />
                        <ComboBoxItem Content="Negocios" />
                        <ComboBoxItem Content="Estudios" />
                    </ComboBox>

                    <Grid Margin="0,20,0,0">
                        <!-- Botón "Guardar Cambios" alineado a la derecha -->
                        <Button Content="Guardar Cambios" 
                            Background="#4CAF50" 
                            Foreground="White" 
                            FontWeight="Bold" 
                            Height="40" 
                            HorizontalAlignment="Center" 
                            Grid.Column="1"
                            x:Name="BtnGuardar" 
                            Click="BtnGuardar_Click" />

                        <Button Content="Agregar Cliente" 
                              Background="#4CAF50" 
                              Foreground="White" 
                              FontWeight="Bold" 
                              Height="40" 
                              HorizontalAlignment="Left" 
                              Grid.Column="1"
                              Click="BtnAgregar_Click" />

                        <Button Content="Lista Clientes" 
                            Background="#4CAF50" 
                            Foreground="White" 
                            FontWeight="Bold" 
                            Height="40" 
                            HorizontalAlignment="Left"
                            Click="BtnVerClientes" 
                            Margin="774,0,0,0" 
                            Width="86" />
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Barra inferior -->
        <Border Background="#4A90E2" Height="50" VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Travel Explorago - Gestión de Viajes" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           Foreground="White" />
            </StackPanel>
        </Border>
    </Grid>
</Window>

