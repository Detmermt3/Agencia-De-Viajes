<Window x:Class="Proyecto_DetmerMedina_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Validar DNI/NIF" Height="395" Width="681"
        WindowStartupLocation="CenterScreen"
        Background="#F9F9F9">
    <Grid>
        <!-- Fondo con barra lateral -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Barra lateral -->
        <Border Background="#2C3E50" HorizontalAlignment="Left" VerticalAlignment="Stretch">
            <StackPanel Margin="20" VerticalAlignment="Center">
                <TextBlock Text="Validación de DNI" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,10" TextAlignment="Center" />
                <TextBlock Text="Introduce tu DNI correctamente para continuar." 
                           FontSize="14" Foreground="White" TextWrapping="Wrap" TextAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Contenido del login -->
        <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="20" Margin="40,60,40,60" BorderBrush="#DADADA" BorderThickness="1">
            <StackPanel>
                <!-- Título -->
                <TextBlock Text="Iniciar Sesión" FontSize="24" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,20" />

                <!-- Campo de DNI -->
                <StackPanel Orientation="Vertical" Margin="0,10">
                    <Label Content="DNI/NIF" FontSize="14" FontWeight="Bold" Foreground="#2C3E50"/>
                    <TextBox x:Name="txtDni" Background="#F0F0F0" Foreground="#33353D" BorderThickness="1" BorderBrush="#DADADA" Padding="8" />
                </StackPanel>

                <!-- Mensaje de error -->
                <TextBlock x:Name="txtError" Text="" Foreground="Red" FontWeight="Bold" Visibility="Collapsed" Margin="0,10,0,0" />

                <Button Content="Validar DNI" Click="BtnValidate_Click"
                        Background="#4A90E2" Foreground="White" Width="75" Height="40" FontWeight="Bold" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
