<Window x:Class="Proyecto_DetmerMedina_.Destinos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Destinos" Height="664" Width="1394"
        WindowStartupLocation="CenterScreen" Background="#F9F9F9">
    <Grid>
        <!-- Barra lateral -->
        <Border Background="#2C3E50" Width="250" HorizontalAlignment="Left">
            <StackPanel Margin="20" VerticalAlignment="Top">
                <!-- Categorías -->
                <TextBlock Text="COMPRA POR CATEGORÍAS" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>
                <ListBox Background="Transparent" BorderThickness="0">
                    <ListBoxItem Content="Roma" Foreground="White" FontSize="14" />
                    <ListBoxItem Content="Francia" Foreground="White" FontSize="14" />
                    <ListBoxItem Content="Países Bajos" Foreground="White" FontSize="14" />
                    <ListBoxItem Content="Nueva Zelanda" Foreground="White" FontSize="14" />
                    <ListBoxItem Content="Cancún" Foreground="White" FontSize="14" />
                    <ListBoxItem Content="Japón" Foreground="White" FontSize="14" />
                    <ListBoxItem Content="Australia" Foreground="White" FontSize="14" />
                    <ListBoxItem Content="Irlanda" Foreground="White" FontSize="14" />
                </ListBox>

                <!-- Información adicional -->
                <TextBlock Text="INFORMACIÓN IMPORTANTE" FontSize="14" FontWeight="Bold" Foreground="Yellow" Margin="0,20,0,10" />
                <TextBlock Text="• Ida y Vuelta\n• Política de Privacidad\n• Contáctanos\n• Preguntas y Respuestas\n• Condiciones" FontSize="12" Foreground="White" />

                <!-- Explora más -->
                <TextBlock Text="EXPLORA ALGO NUEVO" FontSize="14" FontWeight="Bold" Foreground="LightBlue" Margin="0,20,0,10" />
                <TextBlock Text="• Diferentes Lugares\n• Exóticos y únicos\n• Pocos conocidos\n• África por ejemplo" FontSize="12" Foreground="White" />
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Background="#4A90E2" Height="50" VerticalAlignment="Top">
            <Button Content="INICIO" FontSize="16" FontWeight="Bold" Foreground="White" Margin="20,10" Background="Transparent" BorderBrush="Transparent" Click="ButtonInicio" />
        </StackPanel>


        <!-- Contenido principal -->
        <ScrollViewer Margin="270,60,10,10">
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
                <!-- Primera fila de 3 tarjetas -->
                <Border Background="White" Width="320" Height="400" Margin="10" CornerRadius="10" BorderBrush="#DADADA" BorderThickness="1">
                    <StackPanel>
                        <Image Source="destinos/abudab.jpg" Height="180" Stretch="UniformToFill" />
                        <TextBlock Text="ABU DHABI" FontSize="18" FontWeight="Bold" Margin="10,10,10,5" />
                        <TextBlock Text="Descubre la mezcla perfecta entre modernidad y cultura árabe en la capital de los Emiratos." 
                   FontSize="14" Margin="10,0,10,10" TextWrapping="Wrap" />
                        <Button Content="Descubre Más" Background="#4A90E2" Foreground="White" FontWeight="Bold" Margin="10" Height="30" />
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                            <Button Content="AÑADIR" Background="#2C3E50" Foreground="White" FontWeight="Bold" Width="100" Margin="5" Click="Button_Click"/>
                            <TextBlock Text="350 $" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0" />
                        </StackPanel>
                        <Button Content="+ DETALLES" Background="#EAEAEA" FontWeight="Bold" Width="120" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

                <Border Background="White" Width="320" Height="400" Margin="10" CornerRadius="10" BorderBrush="#DADADA" BorderThickness="1">
                    <StackPanel>
                        <Image Source="destinos/islasmaldivas.jpg" Height="180" Stretch="UniformToFill" />
                        <TextBlock Text="ISLAS MALDIVAS" FontSize="18" FontWeight="Bold" Margin="10,10,10,5" />
                        <TextBlock Text="Sumérgete en aguas cristalinas y vive un paraíso tropical lleno de lujo y tranquilidad." 
                   FontSize="14" Margin="10,0,10,10" TextWrapping="Wrap" />
                        <Button Content="Descubre Más" Background="#4A90E2" Foreground="White" FontWeight="Bold" Margin="10" Height="30" />
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                            <Button Content="AÑADIR" Background="#2C3E50" Foreground="White" FontWeight="Bold" Width="100" Margin="5" Click="Button_Click"/>
                            <TextBlock Text="350 $" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0" />
                        </StackPanel>
                        <Button Content="+ DETALLES" Background="#EAEAEA" FontWeight="Bold" Width="120" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

                <Border Background="White" Width="320" Height="400" Margin="10" CornerRadius="10" BorderBrush="#DADADA" BorderThickness="1">
                    <StackPanel>
                        <Image Source="destinos/LA.jpg" Height="180" Stretch="UniformToFill" />
                        <TextBlock Text="LOS ANGELES" FontSize="18" FontWeight="Bold" Margin="10,10,10,5" />
                        <TextBlock Text="Vive la magia de Hollywood, las playas de California y un ambiente lleno de diversión." 
                   FontSize="14" Margin="10,0,10,10" TextWrapping="Wrap" />
                        <Button Content="Descubre Más" Background="#4A90E2" Foreground="White" FontWeight="Bold" Margin="10" Height="30" />
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                            <Button Content="AÑADIR" Background="#2C3E50" Foreground="White" FontWeight="Bold" Width="100" Margin="5" Click="Button_Click"/>
                            <TextBlock Text="350 $" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0" />
                        </StackPanel>
                        <Button Content="+ DETALLES" Background="#EAEAEA" FontWeight="Bold" Width="120" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

                <Border Background="White" Width="320" Height="400" Margin="10" CornerRadius="10" BorderBrush="#DADADA" BorderThickness="1">
                    <StackPanel>
                        <Image Source="destinos/londres.jpg" Height="180" Stretch="UniformToFill" />
                        <TextBlock Text="LONDRES" FontSize="18" FontWeight="Bold" Margin="10,10,10,5" />
                        <TextBlock Text="Explora una ciudad llena de historia, cultura y arquitectura emblemática como el Big Ben." 
                   FontSize="14" Margin="10,0,10,10" TextWrapping="Wrap" />
                        <Button Content="Descubre Más" Background="#4A90E2" Foreground="White" FontWeight="Bold" Margin="10" Height="30" />
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                            <Button Content="AÑADIR" Background="#2C3E50" Foreground="White" FontWeight="Bold" Width="100" Margin="5" Click="Button_Click"/>
                            <TextBlock Text="350 $" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0" />
                        </StackPanel>
                        <Button Content="+ DETALLES" Background="#EAEAEA" FontWeight="Bold" Width="120" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

                <Border Background="White" Width="320" Height="400" Margin="10" CornerRadius="10" BorderBrush="#DADADA" BorderThickness="1">
                    <StackPanel>
                        <Image Source="destinos/marru.jpg" Height="180" Stretch="UniformToFill" />
                        <TextBlock Text="MARRUECOS" FontSize="18" FontWeight="Bold" Margin="10,10,10,5" />
                        <TextBlock Text="Adéntrate en los exóticos bazares, paisajes desérticos y una rica cultura árabe." 
                   FontSize="14" Margin="10,0,10,10" TextWrapping="Wrap" />
                        <Button Content="Descubre Más" Background="#4A90E2" Foreground="White" FontWeight="Bold" Margin="10" Height="30" />
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                            <Button Content="AÑADIR" Background="#2C3E50" Foreground="White" FontWeight="Bold" Width="100" Margin="5" Click="Button_Click"/>
                            <TextBlock Text="350 $" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0" />
                        </StackPanel>
                        <Button Content="+ DETALLES" Background="#EAEAEA" FontWeight="Bold" Width="120" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

                <Border Background="White" Width="320" Height="400" Margin="10" CornerRadius="10" BorderBrush="#DADADA" BorderThickness="1">
                    <StackPanel>
                        <Image Source="destinos/puntacana.jpg" Height="180" Stretch="UniformToFill" />
                        <TextBlock Text="PUNTA CANA" FontSize="18" FontWeight="Bold" Margin="10,10,10,5" />
                        <TextBlock Text="Disfruta de playas paradisíacas, resorts de lujo y una experiencia caribeña inolvidable." 
                   FontSize="14" Margin="10,0,10,10" TextWrapping="Wrap" />
                        <Button Content="Descubre Más" Background="#4A90E2" Foreground="White" FontWeight="Bold" Margin="10" Height="30" />
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                            <Button Content="AÑADIR" Background="#2C3E50" Foreground="White" FontWeight="Bold" Width="100" Margin="5" Click="Button_Click"/>
                            <TextBlock Text="350 $" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0" />
                        </StackPanel>
                        <Button Content="+ DETALLES" Background="#EAEAEA" FontWeight="Bold" Width="120" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Window>
