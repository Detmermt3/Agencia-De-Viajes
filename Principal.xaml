<Window x:Class="Proyecto_DetmerMedina_.Principal"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Travel Explorago" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">
    <Grid>
        <!-- Barra superior -->
        <Border Background="#4A90E2" Height="50" VerticalAlignment="Top">
            <Grid>
                <!-- Cambiar idioma -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                    <TextBlock Text="Cambia el Lenguaje" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                    <Image Source="img/ESPA.PNG" Width="24" Height="16" Margin="10,0"/>
                    <Image Source="img/USA.png" Width="24" Height="16" Margin="5,0"/>
                    <Image Source="img/ALEM.png" Width="24" Height="16" Margin="5,0"/>
                </StackPanel>

                <!-- Moneda -->
                <ComboBox HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Margin="200,0,0,0">
                    <ComboBoxItem Content="$ Dólar" IsSelected="True"/>
                    <ComboBoxItem Content="€ Euro"/>
                    <ComboBoxItem Content="£ Libra"/>
                </ComboBox>

                <!-- Carrito -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                    <TextBlock Text="Items en tu carrito" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                    <Image Source="img/carrito.png" Width="24" Height="24" Margin="10,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Sección principal -->
        <Grid Margin="0,50,0,0">
            <!-- Imagen de fondo -->
            <Image Source="img/fotofondoPin.jpg" Stretch="UniformToFill" OpacityMask="#FF4B2424" Opacity="0.95">
                <Image.Effect>
                    <BlurEffect/>
                </Image.Effect>
            </Image>

            <!-- Texto en la parte superior -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"  Height="232" Width="480">
                <TextBlock Text="Tiempo para tu" FontSize="36" FontWeight="Bold" Foreground="White" TextAlignment="Center"  >
                    <TextBlock.Effect>
                        <DropShadowEffect/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="próxima AVENTURA" FontSize="48" FontWeight="Bold" Foreground="#FEC923" TextAlignment="Center" >
                    <TextBlock.Effect>
                        <DropShadowEffect/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="Escoge el plan perfecto para ti" FontSize="18" Foreground="White" TextAlignment="Center" Margin="0,10,0,0" >
                    <TextBlock.Effect>
                        <DropShadowEffect/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Botón de acción -->
                <Button Content="COMPRA AQUÍ" Background="#FFA500" Foreground="White" FontWeight="Bold"
                        Width="200" Height="50" Margin="0,20,0,0" HorizontalAlignment="Center" Click="Button_Click" >
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Menú inferior -->
        <Border Background="#4A90E2" Height="50" VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="INICIO" Foreground="White" Background="Transparent" BorderThickness="0" FontSize="16" FontWeight="Bold" Margin="10,0"/>
                <Button Content="LISTA CLIENTES" Foreground="White" Background="Transparent" BorderThickness="0" FontSize="16" FontWeight="Bold" Margin="10,0" Click="Button_Click_1"/>
                <Button Content="BLOG" Foreground="White" Background="Transparent" BorderThickness="0" FontSize="16" FontWeight="Bold" Margin="10,0"/>
                <Button Content="CONTACTANOS" Foreground="White" Background="Transparent" BorderThickness="0" FontSize="16" FontWeight="Bold" Margin="10,0"/>
                <Button Foreground="White" Background="#004BA0" FontSize="16" FontWeight="Bold" Padding="10,5" Margin="10,0">
                    <TextBlock Text="{Binding Nombre}" FontSize="16" FontWeight="Bold"/>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</Window>
